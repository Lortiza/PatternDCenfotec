@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Home" asp-action="ConvertTemperatures" method="post">
    <label for="start">Starting Temperature (Fahrenheit):</label>
    <input type="number" id="start" name="start" required />

    <label for="end">Ending Temperature (Fahrenheit):</label>
    <input type="number" id="end" name="end" required />

    <label for="step">Step Size:</label>
    <input type="number" id="step" name="step" required />

    <button type="submit">Convert</button>
</form>
